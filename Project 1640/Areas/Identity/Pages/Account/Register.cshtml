@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row pb-3 mx-auto w-50 border border-dark rounded-3 text-center bg-warning bg-opacity-25" style="margin-top:5.5rem; padding:1rem">
    <h1>@ViewData["Title"]</h1>
    <div class="col-md-center">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mt-1">
                <input asp-for="Input.Firstname" class="form-control" autocomplete="Firstname" aria-required="true" />
                <label asp-for="Input.Firstname"></label>
                <span asp-validation-for="Input.Firstname" class="text-danger"></span>
            </div>

            <div class="form-floating mt-1">
                <input asp-for="Input.Lastname" class="form-control" autocomplete="Lastname" aria-required="true" />
                <label asp-for="Input.Lastname"></label>
                <span asp-validation-for="Input.Lastname" class="text-danger"></span>
            </div>

            <div class="form-floating mt-1">
                <select asp-for="Input.DepartmentId" asp-items="@Model.Input.DepartmentList" class="form-select" style="padding-top: .625rem" aria-required="true">
                    <option disabled selected>Select Department</option>
                </select>
                <span asp-validation-for="Input.DepartmentId" class="text-danger"></span>
            </div>

            <div class="form-floating mt-1">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mt-1">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mt-1">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mt-1">
                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select" style="padding-top: .625rem" aria-required="true">
                    <option disabled selected>Select Role</option>
                </select>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary rounded-pill mt-3">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
