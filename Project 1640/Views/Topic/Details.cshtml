@model Project_1640.ViewModels.IdeaTopicViewModel

<div>
    <h4>Topic</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Topics.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Topics.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Topics.ClosureDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Topics.ClosureDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Topics.FinalClosureDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Topics.FinalClosureDate)
        </dd>
    </dl>
</div>

<hr/>

<h4>Ideas</h4>
<div class="text-end">
    <a asp-controller="Idea" asp-action="Create" class="btn btn-primary rounded align-middle" asp-route-id="@Model.Topics.Id">
        <i class="bi bi-plus align-middle" style="font-size:20px"></i>
        Create idea
    </a>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                IdeaName
            </th>
            <th>
                IdeaDescription
            </th>
            <th>
                FilePath
            </th>
            <th>
                Like
            </th>
            <th>
                Dislike
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Ideas)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdeaName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdeaDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FilePath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalLike)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalDislike)
                </td>
                <td width="30%">
                    <div class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
                        <a asp-action="Like" asp-controller="Reactions" asp-route-id="@item.IdeaId" class="btn btn-outline-primary rounded align-middle">
                            <i class="bi bi-hand-thumbs-up align-middle"></i>
                            Like
                        </a>
                        <a asp-action="DisLike" asp-controller="Reactions" asp-route-id="@item.IdeaId" class="btn btn-outline-danger mx-2 rounded align-middle">
                            <i class="bi bi-hand-thumbs-down align-middle"></i>
                            Dislike
                        </a>
                        <a asp-action="Create" asp-controller="Comments" asp-route-id="@item.IdeaId" class="btn btn-outline-primary rounded align-middle">
                            Comment
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.IdeaId" class="btn btn-outline-primary rounded align-middle mx-2">
                            <i class="bi bi-pencil-square align-middle" style="font-size:20px"></i>
                            Edit
                        </a>
                    </div>
                    </td>
            </tr>
        }
    </tbody>
</table>