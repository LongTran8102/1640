@model Topic
<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ClosureDate"></label>
            <input asp-for="ClosureDate" class="form-control" />
            <span asp-validation-for="ClosureDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="FinalClosureDate"></label>
            <input asp-for="FinalClosureDate" class="form-control" />
            <span asp-validation-for="FinalClosureDate" class="text-danger"></span>
        </div>
        <button type="submit" class"btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Topic" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back 
        </a>
    </div>
</form>

