@model Topic

<form method="post">
    <div class="row pb-2">
        <h2 class="text-primary">Create Topic</h2>
        <hr />
    </div>
    <div class="form-group">
        <label asp-for="Name">Topic</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClosureDate">Closure Date</label>
        <input asp-for="ClosureDate" class="form-control" />
        <span asp-validation-for="ClosureDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FinalClosureDate">Final Closure Date</label>
        <input asp-for="FinalClosureDate" class="form-control" />
        <span asp-validation-for="FinalClosureDate" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <a asp-controller="Topic" asp-action="Index" class="btn btn-secondary btn-danger" style="width:150px">
            <i class="bi bi-arrow-left-short align-middle"></i>
            Back
        </a>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
    </div>
</form>