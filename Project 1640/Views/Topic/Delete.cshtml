@model Topic
<form method="post" asp-action="Delete">
        <div class="form-group">
            <h2 class="text-primary">Delete Topic</h2>
            <hr />
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ClosureDate"></label>
            <input asp-for="ClosureDate" disabled class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="FinalClosureDate"></label>
            <input asp-for="FinalClosureDate" disabled class="form-control" />
        </div>
        <div class="form-group mt-3 text-center">
            <a asp-controller="Topic" asp-action="Index" class="btn btn-secondary btn-danger" style="width:150px">
                <i class="bi bi-arrow-left-short align-middle"></i>
                Back
            </a>
            <button type="submit" class="btn btn-danger" style="width:150px">
                <i class="bi bi-trash d-inline-block" style="margin-right: .4rem"></i>
                Delete
            </button>
        </div>
</form>
