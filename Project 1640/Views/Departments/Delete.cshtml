@model Project_1640.Models.Department

@{
    ViewData["Title"] = "Delete";
}


<form method="post" asp-action="Delete">
    <div class="row pb-2">
        <h2 class="text-primary">Delete Deparment</h2>
        <hr />
    </div>
    <div class="mb-3">
        <label asp-for="DepartmentName">Department Name</label>
        <input asp-for="DepartmentName" disabled class="form-control" />
    </div>
    <p class="text-danger">@ViewBag.UsedDepartment</p>
    <div class="mt-3">
        <a asp-controller="Departments" asp-action="Index" class="btn btn-primary" style="width:150px">
            <i class="bi bi-arrow-left-short align-middle"></i>
            Back
        </a>
        <button type="submit" class="btn btn-danger" style="width:150px">
            <i class="bi bi-trash d-inline-block" style="margin-right: .4rem"></i>
            Delete
        </button>
    </div>
</form>