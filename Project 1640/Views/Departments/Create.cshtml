@model Project_1640.Models.Department

@{
    ViewData["Title"] = "Create";
}


<form method="post">
    <div class="border p-3 mt-4 mx-auto" style="width:40%">
        <div class="row pb-2">
            <h2 class="text-primary">Create New Department</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="DepartmentName"></label>
            <input asp-for="DepartmentName" class="form-control" />
            <span asp-validation-for="DepartmentName" class="text-danger"></span>
        </div>
        <a asp-controller="Departments" asp-action="Index" class="btn btn-secondary btn-danger" style="width:150px">
            <i class="bi bi-arrow-left-short align-middle"></i>
            Back
        </a>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>

    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
