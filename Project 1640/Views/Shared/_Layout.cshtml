<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project_1640</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Project_1640.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary bg-gradient text-white mb-5 position-fixed w-100" style="top:0; z-index:1">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="bi bi-list"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (Context.User.IsInRole("Admin"))
                        {
                             <li class="nav-item btn btn-outline-success" style="border:none">
                                <a class="nav-link text-white" asp-area="" asp-controller="Users" asp-action="Index">User</a>
                            </li>
                            <li class="nav-item btn btn-outline-success" style="border:none">
                                <a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            </li>
                            <li class="nav-item btn btn-outline-success" style="border:none">
                                <a class="nav-link text-white" asp-area="" asp-controller="AppRoles" asp-action="Index">Roles</a>
                            </li>
                            <li class="nav-item btn btn-outline-success" style="border:none">
                                <a class="nav-link text-white" asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
                            </li>
                            <li class="nav-item btn btn-outline-success" style="border:none">
                                <a class="nav-link text-white" asp-area="" asp-controller="Departments" asp-action="Index">Departments</a>
                            </li>
                            <li class="nav-item btn btn-outline-success" style="border:none">
                                <a class="nav-link text-white" asp-area="" asp-controller="Idea" asp-action="Index">Ideas</a>
                            </li>
                            <li class="nav-item btn btn-outline-success" style="border:none">
                                <a class="nav-link text-white" asp-area="" asp-controller="Topic" asp-action="Index">Topic</a>
                            </li>
                            <li class="nav-item btn btn-outline-success" style="border:none">
                                <a class="nav-link text-white" asp-area="" asp-controller="Idea" asp-action="MostPopularIdeas">Most popular ideas</a>
                            </li>
                            <li class="nav-item btn btn-outline-success" style="border:none">
                                <a class="nav-link text-white" asp-area="" asp-controller="Idea" asp-action="MostViewedIdeas">Most popular ideas</a>
                            </li>
                        }
                        else
                        @if (Context.User.IsInRole("QA/QC Coordinator"))
                        {
                            <li class="nav-item btn btn-outline-success" style="border:none">
                                <a class="nav-link text-white" asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
                            </li>
                            <li class="nav-item btn btn-outline-success" style="border:none">
                                <a class="nav-link text-white" asp-area="" asp-controller="Idea" asp-action="Index">Ideas</a>
                            </li>
                            <li class="nav-item btn btn-outline-success" style="border:none">
                                <a class="nav-link text-white" asp-area="" asp-controller="Topic" asp-action="Index">Topic</a>
                            </li>
                            <li class="nav-item btn btn-outline-success" style="border:none">
                                <a class="nav-link text-white" asp-area="" asp-controller="Idea" asp-action="MostPopularIdeas">Most popular ideas</a>
                            </li>
                            <li class="nav-item btn btn-outline-success" style="border:none">
                                <a class="nav-link text-white" asp-area="" asp-controller="Idea" asp-action="MostViewedIdeas">Most popular ideas</a>
                            </li>
                        }
                        else
                        @if (Context.User.IsInRole("Staff"))
                        {
                            <li class="nav-item btn btn-outline-success" style="border:none">
                                <a class="nav-link text-white" asp-area="" asp-controller="Topic" asp-action="Index">Topic</a>
                            </li>
                            <li class="nav-item btn btn-outline-success" style="border:none">
                                <a class="nav-link text-white" asp-area="" asp-controller="Idea" asp-action="MostPopularIdeas">Most popular ideas</a>
                            </li>
                            <li class="nav-item btn btn-outline-success" style="border:none">
                                <a class="nav-link text-white" asp-area="" asp-controller="Idea" asp-action="MostViewedIdeas">Most popular ideas</a>
                            </li>
                        }
                    </ul>
                </div>
                <a class="nav-item text-decoration-none h-100 text-primary">
                    <partial name="_LoginPartial" />
                </a>
            </div>
        </nav>
    </header>
    <div class="container" style="margin-top:6rem">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
