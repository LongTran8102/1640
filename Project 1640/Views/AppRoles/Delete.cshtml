@using Microsoft.AspNetCore.Identity
@model IdentityRole


<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
     <div class="row pb-2">
            <h2 class="text-primary">Delete Role</h2>
            <p>Are you sure to delete this role?</p>
            <hr/>
        </div>
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" disabled class="form-control" />
    </div>
    <p class="text-danger">@ViewBag.UsedRole</p>
    <div class="mt-3">
        <a asp-controller="AppRoles" asp-action="Index" class="btn btn-secondary btn-primary" style="width:150px">
            <i class="bi bi-arrow-left-short align-middle"></i>
            Back
        </a>
        <button type="submit" class="btn btn-danger" style="width:150px">
            <i class="bi bi-trash d-inline-block" style="margin-right: .4rem"></i>
            Delete
        </button>
    </div>
</form>