@using Microsoft.AspNetCore.Identity
@model IdentityRole

<form method="post">
    <div class="border p-3 mt-4 mx-auto" style="width:40%">
        <div class="row pb-2">
                <h2 class="text-primary">Create Role</h2>
                <hr />
            </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <a asp-controller="AppRoles" asp-action="Index" class="btn btn-secondary btn-danger" style="width:150px">
            <i class="gg-arrow-left d-inline-block align-middle"></i>
            Back
        </a>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
    </div>
</form>