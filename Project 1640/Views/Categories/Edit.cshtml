@model Project_1640.Models.Category
@{
    ViewData["Title"] = "Edit";
}


<form asp-controller="Categories" enctype="multipart/form-data" asp-action="Edit" method="post">
    <div class="row pb-2">
        <h2 class="text-primary">Edit Category</h2>
        <hr />
    </div>
    <input type="hidden" asp-for="CategoryId" />
    <div class="form-group">
        <label asp-for="CategoryName" class="control-label">Category</label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
            <a asp-controller="Categories" asp-action="Index" class="btn btn-danger" style="width:150px">
                <i class="bi bi-arrow-left-short align-middle"></i>
                Back
            </a>
            <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
