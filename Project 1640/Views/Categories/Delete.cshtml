@model Project_1640.Models.Category
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
    <div class="mb-3">
        <label asp-for="CategoryName"></label>
        <input asp-for="CategoryName" disabled class="form-control" />
    </div>
    <div class="mt-3">
        <a asp-controller="Categories" asp-action="Index" class="btn btn-secondary btn-danger" style="width:150px">
            <i class="bi bi-arrow-left-short align-middle"></i>
            Back
        </a>
        <button type="submit" class="btn btn-danger" style="width:150px">
            <i class="bi bi-trash d-inline-block" style="margin-right: .4rem"></i>
            Delete
        </button>
    </div>
</form>