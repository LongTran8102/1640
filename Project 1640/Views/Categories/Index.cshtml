@model Project_1640.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
            <form asp-action="Index">
                <div class="row">
                    <div class="col-md-7">
                        <input name="term" class="form-control" placeholder="Search by Category Name" />
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-info">Search</button>
                    </div>
                </div>
            </form>
            <a asp-action="Index" class="btn btn-danger mt-3">
                Back
            </a>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Categories" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus d-inline-block align-middle" style="font-size: 1.25rem"></i>
                Create New Category
            </a>
        </div>
    </div>
<br />
<br />
<table class="table table-hover">
    <thead class="bg-gradient bg-primary text-white">
        <tr>
            <th>
                @Html.DisplayName("Category")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.categories) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-outline-primary rounded mx-3 align-middle">
                        <i class="bi bi-pencil-square align-middle" style="font-size:20px"></i>
                        Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-outline-danger rounded align-middle">
                        <i class="bi bi-trash align-middle" style="font-size:20px"></i>
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="/Categories/Index?term=@Model.Term&currentPage=@(Model.CurrentPage-1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.CurrentPage)
                {
                    <li class="page-item"><a class="page-link active text-danger" href="/Categories/Index?term=@Model.Term&currentPage=@i">@i</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" href="/Categories/Index?term=@Model.Term&currentPage=@i">@i</a></li>
                }
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="/Categories/Index?term=@Model.Term&currentPage=@(Model.CurrentPage+1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>
