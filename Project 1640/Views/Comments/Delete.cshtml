@model Project_1640.Models.Comment

@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <div class="form-group">
        <h2 class="text-primary">Delete Idea</h2>
        <hr />
    </div>
    <div class="form-group">
        <label asp-for="CommentText"></label>
        <input asp-for="CommentText" disabled class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CommentDate"></label>
        <input asp-for="CommentDate" disabled class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UserId"></label>
        <input asp-for="UserId" disabled class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdeaId"></label>
        <input asp-for="IdeaId" disabled class="form-control" />
    </div>
    <div class="mt-3">

        <a asp-controller="Idea" asp-action="Index" class="btn btn-secondary btn-danger" style="width:150px">
            <i class="bi bi-arrow-left-short align-middle"></i>
            Back
        </a>
        <button type="submit" class="btn btn-secondary" style="width:150px">
            <i class="bi bi-trash d-inline-block" style="margin-right: .4rem"></i>
            Delete
        </button>
    </div>
</form>