@model Project_1640.Models.Comment

@{
    ViewData["Title"] = "Create";
}

<h1>Comment</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label mb-3">Add a comment</label>
                <input asp-for="CommentText" class="form-control mb-3" />
                <span asp-validation-for="CommentText" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary mb-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary btn-danger" style="width:150px">
            <i class="bi bi-arrow-left-short align-middle"></i>
            Back
        </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
