@model Project_1640.ViewModels.CommentViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Idea Details</h1>

<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ideas.IdeaName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ideas.IdeaName)
        </dd>
        <dt class = "col-sm-2">
            Topic Name
        </dt>        
        <dd class="col-sm-10">
            @ViewBag.TopicName
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ideas.IdeaDescription)
        </dt>        
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ideas.IdeaDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ideas.FilePath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ideas.FilePath)
        </dd>
    </dl>
</div>
<div class="form-group mt-3">
    <div>
    <a asp-controller="Idea" asp-action="Index" class="btn btn-secondary btn-danger" style="width:150px">
        <i class="bi bi-arrow-left-short align-middle"></i>
        Back
    </a>
        <a asp-action="Create" asp-controller="Comments" asp-route-id="@Model.Ideas.IdeaId" class="btn btn-outline-primary rounded mx-3 align-middle">
        <i class="bi bi-pencil-square align-middle" style="font-size:20px"></i>
         Create Comment
    </a>
        <a asp-action="Edit" asp-route-id="@Model.Ideas.IdeaId">Edit</a>
    </div>
</div>

@foreach (var item in Model.Comments)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CommentText)
        </td>
    </tr>
}
