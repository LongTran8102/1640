@model Project_1640.Models.Idea

@{
    ViewData["Title"] = "Details";
}

<h1>Idea Details</h1>

<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdeaName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdeaName)
        </dd>
        <dt class = "col-sm-2">
            Topic Name
        </dt>        
        <dd class="col-sm-10">
            @ViewBag.TopicName
        </dd>
        <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.IdeaDescription)
        </dt>        
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdeaDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FilePath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FilePath)
        </dd>
    </dl>
</div>
<div class="form-group mt-3">
    <a asp-controller="Idea" asp-action="Index" class="btn btn-secondary btn-danger" style="width:150px">
        <i class="bi bi-arrow-left-short align-middle"></i>
        Back
    </a>
</div>
