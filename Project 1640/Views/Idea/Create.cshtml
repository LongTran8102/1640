@model Project_1640.ViewModels.IdeaViewModel

@{
    ViewBag.Title = "Create Idea";
}


<form asp-controller="Idea" enctype="multipart/form-data" asp-action="Create" method="post">
    <div class="row pb-2">
        <h2 class="text-primary">Create New Idea</h2>
        <hr />
    </div>
    <div class="form-group">
        <label asp-for="IdeaName" class="form-label">Idea Name</label>
        <input asp-for="IdeaName" class="form-control" />
        <span asp-validation-for="IdeaName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdeaDescription" class="form-label">Idea Description</label>
        <input asp-for="IdeaDescription" class="form-control" />
        <span asp-validation-for="IdeaDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for=CategoryId asp-items="@ViewBag.CategoryList" class="form-select"><option disabled selected>--Please select category--</option></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group"/>
    <label asp-for="AttachFile" class="form-label">Attach File (.PDF, .DOC, .DOCX)</label>
        <input asp-for="AttachFile" class="form-control" accept="application/pdf,application/msword, application/vnd.openxmlformats-officedocument.wordprocessingml.document" />
    </div>
    <p class="text-danger">@ViewBag.LargeFile</p>
    <p class="text-danger">@ViewBag.WrongType</p>
    <div class="form-group">
        <input asp-for="TermsConditions" type="checkbox" />
        <label asp-for="TermsConditions"></label>
        <br /><span asp-validation-for="TermsConditions" class="text-danger"></span>
    </div>
    <p class="text-danger">@ViewBag.FailAccept</p>
    <div class="form-group mt-3">
        <a asp-controller="Topic" asp-action="Details" asp-route-id="@ViewBag.TopicId" class="btn btn-secondary btn-danger" style="width:150px">
            <i class="bi bi-arrow-left-short align-middle"></i>
            Back
        </a>
        <button onclick="OnClick" type="submit" class="btn btn-primary" style="width:150px">Create</button>
    </div>
</form>
