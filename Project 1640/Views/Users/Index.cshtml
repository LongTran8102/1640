@model IEnumerable<Project_1640.ViewModels.UsersViewModel>


<h1>Index</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@string.Join("",user.Roles.ToList())</td>
                <td>@user.DepartmentName</td>
                <td class="text-center">
                    <div class="btn-group border-start" role="button">
                        <a asp-action="Edit" asp-route-id="@user.UserID" class="btn btn-outline-primary rounded mx-3 align-middle">
                            <i class="bi bi-pencil-square align-middle" style="font-size:20px"></i>
                            Edit
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>